<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9">

    <!-- 3.3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ACBFBFBF"
            android:scaleType="fitXY" />

    </LinearLayout>

    <!-- 1.3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:weightSum="3">

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Titolo"
                    android:textColor="#000000"
                    android:textSize="23dp"
                    android:textStyle="bold" />

            </ScrollView>

        <Button
            android:id="@+id/buttonRateFilm"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="Valuta"
            android:textSize="20dp" />

    </LinearLayout>

    <!-- 3.7 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.7"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum vel dolor sit amet tortor congue egestas vitae eget elit. Integer imperdiet ante arcu, a accumsan purus laoreet accumsan. Praesent turpis tellus, ultricies nec gravida et, tristique vel ante. Nullam quis nulla dui. Vestibulum ac porttitor sapien, nec pellentesque elit. Praesent gravida vehicula ipsum, id efficitur turpis sagittis molestie. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque quis diam congue, auctor sapien consectetur, lobortis erat. Integer dolor odio, porttitor quis varius et, egestas eget massa. Suspendisse a nulla ultrices, facilisis lectus in, laoreet diam."
                android:textSize="18dp" />

        </ScrollView>

    </LinearLayout>

    <!-- 0.7 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_weight="0.7"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/rateNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="   "
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

    </LinearLayout>

</LinearLayout>