<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewDetail"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#ACBFBFBF"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Titolo"
            android:textColor="#000000"
            android:textSize="28dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/buttonRateFilm"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:backgroundTint="@color/colorPrimary"
            android:text="Valuta"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum vel dolor sit amet tortor congue egestas vitae eget elit. Integer imperdiet ante arcu, a accumsan purus laoreet accumsan. Praesent turpis tellus, ultricies nec gravida et, tristique vel ante. Nullam quis nulla dui. Vestibulum ac porttitor sapien, nec pellentesque elit. Praesent gravida vehicula ipsum, id efficitur turpis sagittis molestie. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque quis diam congue, auctor sapien consectetur, lobortis erat. Integer dolor odio, porttitor quis varius et, egestas eget massa. Suspendisse a nulla ultrices, facilisis lectus in, laoreet diam."
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rateNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   "
                android:textColor="#000000"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>